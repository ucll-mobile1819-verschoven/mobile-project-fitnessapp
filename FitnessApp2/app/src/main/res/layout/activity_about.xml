<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimage"
    tools:context=".ListExercises">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/title"
        android:text="ABOUT"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:gravity="center_vertical|center_horizontal"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <View
        android:id="@+id/devider2"
        android:layout_below="@id/missionBody"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <TextView
        android:id="@+id/missionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Our mission:"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@id/title"
        android:paddingLeft="12dp"
        />
    <TextView
        android:id="@+id/missionBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Our mission is to provide an Entertaining, Educational, Friendly and Inviting, Functional and Innovative experience of exceptional quality that meets the health and fitness needs of anyone interested in improving their fitness."
        android:layout_below="@id/missionTitle"
        android:textSize="16dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        />

    <View
        android:id="@+id/devider"
        android:layout_below="@id/missionBody"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <TextView
        android:id="@+id/descTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How it works:"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@id/devider"
        android:paddingLeft="12dp"
        />
    <TextView
        android:id="@+id/descContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descTitle"
        android:text="The app is designed to educate users with a description and how-to advice on various exercises to improve their knowledge of exercises. The app also allows users to adjust time of exercise to give the user flexibility to suit their needs and an added calorie calculator will keep track of the number of calories burned with each exercise to help the figure the optimum amount of exercise they want to take."
        android:textSize="16dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageButton
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@id/descContent"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/start_icon" />
</LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/copyright"
        android:textColor="@android:color/black"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="14dp"
        android:text="Â©2019 fitness app"
        />
</LinearLayout>
</LinearLayout>
</RelativeLayout>